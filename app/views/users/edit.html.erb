<!DOCTYPE html>
<html>
<head>
	<title>Edit</title>
</head>
<body>
<%= flash[:success]%>
<h1>Editing User: <%= @user.name %></h1>

<%= form_tag("/users/update/#{@user.id}", method: "patch" ) do %>
  <p><%= label_tag(:user, "Email: ") %>
  <%= text_field_tag :email, @user.email %></p>
  <p><%= label_tag(:user, "Name: ") %>
  <%= text_field_tag :name, @user.name %></p>
  <%= submit_tag("Update") %>
<% end %>


<br>
<%= form_tag :action => 'destroy' do%>
  <%= button_to "Delete Account", {:controller => :users, :action => 'destroy', :id => @user.id }, :method => :delete %>
<% end %>

<br>
<a href="/users/<%= @user.id%>">Back</a>
</body>
</html>